{
  "name": "reactive-mobx-form",
  "version": "0.7.3",
  "description": "Reactive forms for React running on MobX",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vict-shevchenko/reactive-mobx-form.git"
  },
  "keywords": [
    "react",
    "mobx",
    "forms",
    "typescript"
  ],
  "author": "Viktor Shevchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vict-shevchenko/reactive-mobx-form/issues"
  },
  "homepage": "https://github.com/vict-shevchenko/reactive-mobx-form#readme",
  "dependencies": {
    "prop-types": "^15.5.7",
    "validatorjs": "^3.12.0"
  },
  "peerDependencies": {
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "react": "^15.6.1"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/validatorjs": "^3.7.0",
    "jest": "^21.1.0",
    "ts-jest": "^21.2.4",
    "tslint": "^5.7.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
