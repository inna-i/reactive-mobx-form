{
  "name": "reactive-mobx-form",
  "version": "0.9.7",
  "description": "Reactive forms for React running on MobX",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vict-shevchenko/reactive-mobx-form.git"
  },
  "keywords": [
    "react",
    "mobx",
    "forms",
    "typescript"
  ],
  "author": "Viktor Shevchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vict-shevchenko/reactive-mobx-form/issues"
  },
  "homepage": "https://github.com/vict-shevchenko/reactive-mobx-form#readme",
  "dependencies": {
    "validatorjs": "^3.14.2"
  },
  "peerDependencies": {
    "mobx": "^4.2.0",
    "mobx-react": "^5.0.0",
    "react": "^16.3.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/validatorjs": "^3.7.1",
    "enzyme": "^3.4.3",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
